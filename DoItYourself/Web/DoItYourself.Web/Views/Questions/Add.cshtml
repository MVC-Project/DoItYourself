@model DoItYourself.Web.ViewModels.Questions.QuestionCreateViewModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Questions
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="~/Questions/Index">Questions</a>
            </li>
            <li class="active">Add</li>
        </ol>
    </div>
</div>

<h2>
    Need help? Ask question
</h2>

@using (Html.BeginForm("Add", "Questions", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="col-md-10">
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 pull-right">
                <input type="submit" class="btn btn-primary" value="Ask Question" />
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}