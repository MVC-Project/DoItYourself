@model DoItYourself.Web.ViewModels.Projects.ProjectCreateViewModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Projects
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="~/Projects/Index">Projects</a>
            </li>
            <li class="active">Add</li>
        </ol>
    </div>
</div>

<h2>
    Share your new project
</h2>

@using (Html.BeginForm("Add", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

     @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="col-md-10">
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Image, new { @class = "col-md-2 control-label" })
            <label class="col-md-3 btn btn-success" for="my-file-selector" id="upload-image">
                <input id="my-file-selector" type="file" name="Image" style="display:none;">
                Choose file...
            </label>
        </div>
        <div class="form-group">
            <div class="col-md-10 pull-right">
                <input type="submit" class="btn btn-primary" value="Add Project" />
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}